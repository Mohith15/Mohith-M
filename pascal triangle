#include<stdio.h>
int main()
{
unsigned int rows,k,space,i,j;
printf("enter the number of rows:");
scanf("%d",&rows);
if(rows>0)
{
for(i=0;i<rows;i++)
{
for(space=1;space<=rows-i;++space)
printf(" ");
for(j=0;j<=i;++j)
{
if(j==0||i==0)
k=1;else
k=k*(i-j+1)/j;
printf("%4d",k);
}
printf("\n");
}
return 0;
}
printf("row number is less than 1");
}
